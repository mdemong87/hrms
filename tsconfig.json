{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/layout/AppHeader.jsx",
    "src/app/(admin)/(others-pages)/employee/attendance/[id]/page.jsx",
    "src/components/auth/SignInForm.jsx",
    "src/components/auth/SignUpForm.jsx",
    "src/components/form/Select.jsx",
    "src/app/(admin)/(others-pages)/employee/attendance/page.jsx",
    "src/app/(deshboard)/admin/layout.jsx",
    "src/app/(deshboard)/projectmanager/layout.jsx",
    "src/app/(deshboard)/hr/layout.jsx",
    "src/app/(deshboard)/employee/layout.jsx",
    "src/components/common/PageBreadCrumb.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}